# Pattern Compliance Dashboard - Environment Variables
# Copy this file to .env.pattern-compliance.local and update with your values

# ============================================================================
# CLOUDFLARE CONFIGURATION
# ============================================================================

# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=your_account_id

# Cloudflare API Token (for D1 operations)
CLOUDFLARE_API_TOKEN=your_api_token

# D1 Database ID (production)
PATTERN_COMPLIANCE_DB_ID=your_d1_database_id

# ============================================================================
# GITHUB CONFIGURATION
# ============================================================================

# GitHub Personal Access Token (for private repository access)
# Scopes needed: repo, read:user
GITHUB_TOKEN=your_github_pat

# GitHub App ID (optional, for enhanced API limits)
GITHUB_APP_ID=your_app_id

# GitHub App Private Key (optional)
GITHUB_APP_PRIVATE_KEY=your_app_private_key

# ============================================================================
# EMAIL CONFIGURATION (Resend)
# ============================================================================

# Resend API Key (for email approvals)
RESEND_API_KEY=your_resend_api_key

# From email address for approval notifications
EMAIL_FROM=approvals@pattern-compliance.example.com

# From name for approval notifications
EMAIL_FROM_NAME=Pattern Compliance Dashboard

# Reply-to email address
EMAIL_REPLY_TO=support@example.com

# ============================================================================
# SLACK CONFIGURATION
# ============================================================================

# Slack Bot Token (for human-input MCP Server approvals)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack Signing Secret (for webhook verification)
SLACK_SIGNING_SECRET=your_signing_secret

# Default Slack channel for approval notifications
SLACK_APPROVAL_CHANNEL=C12345678

# ============================================================================
# AUTHENTICATION
# ============================================================================

# GitHub OAuth (from GitHub App settings)
GITHUB_CLIENT_ID=your_oauth_client_id
GITHUB_CLIENT_SECRET=your_oauth_client_secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Secret (for session management)
JWT_SECRET=your_jwt_secret_key_min_32_chars

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL
APP_URL=http://localhost:3000

# API Base URL (for internal API calls)
API_URL=http://localhost:3000/api

# Approval SLA (hours until deadline)
APPROVAL_SLA_HOURS=24

# Enable debug logging
DEBUG=false

# ============================================================================
# VAULT CONFIGURATION (optional, for secret rotation)
# ============================================================================

# Vault API URL
VAULT_ADDR=https://vault.example.com

# Vault Token
VAULT_TOKEN=your_vault_token

# Vault Secrets Path
VAULT_SECRETS_PATH=secret/apps/pattern-compliance

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry DSN (error tracking)
SENTRY_DSN=

# LogDNA Ingestion Key (log aggregation)
LOGDNA_INGESTION_KEY=

# Enable performance monitoring
ENABLE_PROFILING=false
