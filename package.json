    "@tanstack/react-table": "^8.21.3",
    "arctic": "^3.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv-safe": "^9.1.0",
    "drizzle-orm": "^0.44.6",
    "ipaddr.js": "^2.2.0",
    "lucide-react": "^0.471.2",
